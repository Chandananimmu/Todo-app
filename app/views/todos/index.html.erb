<h1>List of all Todos</h1>
<p><%= link_to "Create a Todo",new_todo_path%></p>
<table>
<tr><th>Name</th><th>Description</th></tr>
<% @todos.each do |todo|%>
<tr><td><%= todo.name%></td><td><%= todo.description%></td>
<td><p><%= link_to "Edit a Todo",edit_todo_path(todo)%></p></td>
<td><p><%= link_to "Show a Todo",todo_path(todo)%></p></td>
</tr>

<%end%>
</table>
